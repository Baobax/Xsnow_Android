<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.baptiste.xsnow_android.MainActivity">

    <Button
        android:id="@+id/btnNeige"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theme_neige"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnNoel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theme_noel"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnHalloween"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theme_halloween"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnAutomne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theme_automne"
        android:layout_gravity="center" />

</LinearLayout>
